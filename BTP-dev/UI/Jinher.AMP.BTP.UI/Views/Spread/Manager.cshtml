@{
    ViewBag.Title = "推广码管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css{
    <link href="/Content/common.css" rel="stylesheet" type="text/css" />
    <link href="/Content/default/ui.jqgrid.css" rel="stylesheet" type="text/css" />
    <link href="/Content/default/jquery.ui.jhtablebox.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
        input.inp-txt
        {
            height: 18px;
            line-height: 18px;
            border: 1px solid #B6C0CD;
            padding: 4px 5px;
            vertical-align: middle;
            border-radius: 3px;
            box-shadow: inset 1px 1px 2px #DBDBDB;
        }
        .toolbar
        {
            background: #F2F2F2;
            margin-bottom: 0;
            font-size: 14px;
            height: 40px;
            line-height: 35px;
            text-align: left;
        }

        .input-group{
            text-align: center; margin: 23px 0;
