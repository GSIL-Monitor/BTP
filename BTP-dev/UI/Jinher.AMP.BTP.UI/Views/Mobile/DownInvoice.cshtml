
<script type="text/javascript">
    $(function () {
        var u = navigator.userAgent;
        var isAndroid = u.indexOf('Android') > -1 || u.indexOf('Adr') > -1; //android终端
        if (isAndroid) {
            $.ajax({
                url: '/Mobile/GetFile',
                async: false,
                type: 'post',
                data: { orderCode: getQueryString('orderCode') },
                success: function (data) {
                    window.location.href = data;
                }, error: function (err) {
                    alert("出错了！" + err);
                }
            });
        }
    });
</script>