    <script type="text/javascript">
        var index = 1;
        var _sortId = 1;
        var _sort = "";
        var _pageSize = "";
        var _pageIndex = "";
        var addTemplete = $("#divTableTemplete table").html();
        var _parentId = "";
        var countM = 0;
        var nameM = "";
        var userCodeM = "";
        var key = "";
        var level = 1;
