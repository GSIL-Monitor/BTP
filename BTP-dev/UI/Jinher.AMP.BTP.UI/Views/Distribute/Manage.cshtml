        function SortM() {
            $("#dataTable tbody").html("");
            index = 1;
            _pageSize = 50;
            _pageIndex = 1;
            _sort = 1;
            AddData();
            _isLoading = true;
        }
        function SortY() {
            $("#dataTable tbody").html("");
            index = 1;
            _pageSize = 50;
            _pageIndex = 1;
            _sort = 2;
            AddData();
            _isLoading = true;
        }
        function SortF() {
            $("#dataTable tbody").html("");
            index = 1;
            _pageSize = 50;
            _pageIndex = 1;
            _sort = 3;
