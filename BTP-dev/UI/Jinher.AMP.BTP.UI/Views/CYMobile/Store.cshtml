@{
    Layout = "~/Views/Shared/_CYMinMobileLayout.cshtml"; 
}
@section TitleHtml
{
    <title>选择门店</title>
}
<div class="page">
    <header class="bar bar-nav process-header" >
        <a href="javascript:window.history.back();" class="pull-left fa">
            <img src="/Content/style/images/xuanze.png"/>
        </a>
        <h1 class="title">选择门店</h1>
    </header>
    <div class="content">
        <div class="address-list" id="scroller" class="scroll-load">
            <div id="divStoreContainer">
            </div>
        </div>
          <div class="no-goods hide no-data">
            <img src="/Content/style/images/jiazaishibai.png">
            <span class="title">加载失败，点击重新加载</span>
            <button id="btnReloadData" class="btn">重新加载</button>
        </div>
    </div>
</div>
<div id="container" style="display: none;">
</div>
<div id="divStoreItemTemplate" style="display: none;">
    <div class="address-info {Active}" tag="storeItem" storeid="{Id}" onclick="goPage(this);">
        <div class="picture">
            <img  {srckey}="{PicPath}" />
        </div>
        <div class="store">
            <div class="store-info clearfix">
                <span class="store-name">{StoreName}</span> <span class="store-pic">
                    <img id="storeImg" src="/Content/style/images/xuanze.png"></span>
            </div>
            <div class="store-address">
                <span>{Address}</span>
            </div>
            <div class="store-contact">
                <span class="store-phone" onclick="stopPage()">
                   <a href="javascript:void();" onclick="return mulPhone(this,'{Phone1}');" >  <img src="/Content/style/images/dianhua.png">{Phone2}</a></span> <span class="store-distance">
                        <img src="/Content/style/images/weizhi.png">{DistanceText}</span>
            </div>
        </div>
    </div>
</div>
@{Html.RenderPartial("../CYMobile/MulPhone");}
@section CssFile
{
    <link href="/Content/style/mobile_cy/choosestore.css" rel="stylesheet" type="text/css" />
}
@section CssCode
{
 <style type="text/css">
        ul, li {
            list-style-type: none;
        }

        a, a:hover {
            text-decoration: none;
            -webkit-tap-highlight-color: transparent;
        }

        /*电话弹出框*/
        .tel-alert {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 99;
            background: rgba(0, 0, 0, .6);
        }

        .tel-alert > div {
            position: absolute;
            bottom: .2rem;
            left: .2rem;
            right: .2rem;
            z-index: 100;
            text-align: center;
        }

        .tel-alert .tel-list {
            -webkit-border-radius: .25rem;
            border-radius: .25rem;
            overflow: hidden;
        }

        .tel-alert .tel-list li {
            background: #cfcdcc;
            border-bottom: 1px solid #999;
        }

        .tel-alert .tel-list li:last-child {
            border-bottom: none;
        }

        .tel-alert .tel-list li a, .tel-alert .cancel {
            height: 1rem;
            line-height: 1rem;
            font-size: .34rem;
            color: #0079ff;
        }

        .tel-alert .tel-list li a {
            display: block;
        }

        .tel-alert .cancel {
            background: #fff;
            -webkit-border-radius: .25rem;
            border-radius: .25rem;
            margin-top: .2rem;
        }
            </style>
}
@section ScriptCode
{

}
@section ScriptFile
{
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.3&key=8c2706d30e1dbe1b52b870bc5b09d732"></script>
    <script type="text/javascript" src="/content/js/mobile_cy/choosestore.js"></script>
    <script type="text/javascript" src="/content/js/mobile_cy/choosestoreuser.js"></script>
}
