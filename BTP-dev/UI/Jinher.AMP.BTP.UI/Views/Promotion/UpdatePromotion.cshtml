    function deleteNumber(str, type) {
        var arr = str.split(',');
        var tmpArr = [];
        var tmpObj = {};
        var tmpValue = '';
        for (var i = 0; i < arr.length; i++) {
            tmpValue = $.trim(arr[i]);
            if (!tmpObj[tmpValue] && tmpValue) {
                tmpObj[tmpValue] = true;
                tmpArr.push(tmpValue);
            }
        }
        return type ? tmpArr : tmpArr.join(',');
    }

