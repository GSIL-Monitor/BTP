@{
    ViewBag.Title = "添加品牌"; 
}

<!DOCTYPE html>

<html>
<head>
    <title>添加品牌</title>
    <link rel="stylesheet" type="text/css" href="/Content/default/jquery.ui.jhtablebox.css" />
    <link rel="stylesheet" type="text/css" href="/Content/default/ui.jqgrid.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/common.css" />
    <script type="text/javascript" src="/Scripts/jquery.nicescroll.min.js"></script>
    <script type="text/javascript" src="/Scripts/Grid/jquery.grid.base.js"></script>
    <script language="javascript" type="text/javascript">
        function SaveN() {
            var sdata = {
                BrandName: $("#txtBrandName").val(),
                BrandLogo: $("#").val()
            }; 
             $.ajax({
                url: '/Brand/AddBrand/',
                type: 'post',
                dataType: 'json',
                data: sdata,
                error: function () {
                    alert("请稍后再试！"); 
                },
                success: function (data) {
                    if (data.Result == true) {
                        alert(data.Messages);
                        setTimeout(function () {
                            window.location.href = "/Brand/Index";
                        }, 2000);
                    } else {
                        alert(data.Messages); 
                    }
                }
            })
        }
        function CloseN() {
            window.location.href = history.go(-1);
        }
    </script>
</head>
<body>
    <div>
    <div class=" formList">
                <div class="item">
                    <span class="tabCell tabCellWth"><span class="required">*</span><label>品牌名称：</label></span>
                    <span class="tabCell">
                        <input type="text" id="txtBrandName" class="inp-txt w200" maxlength="10" value=""  />
                    </span>
                </div>
                <div class="item">
                    <span class="tabCell tabCellWth"><span class="required">*</span><label>品牌Logo：</label></span>
                    <span class="tabCell">
                        <input type="file" id="" class="inp-txt w200" maxlength="10" value="" />建议图片尺寸：160*160, 小于50K
                    </span>
                </div>
                <div class="item" style="text-align: center">
                    <a id="btnSubmit" onclick="SaveN()" class="btn60">保存</a> <a onclick="CloseN()"
                        class="btn60">取消</a>
                </div>
            </div>
    </div>
</body>
</html>
