                                        else
                                        {
                                        <p class="se2" style="margin: 10px 0 10px 0;">
                                        <font style="color: #3F5164">@uName @re.ReplyerDetails</font></p>
                                            
                                        }
                                        i++;
                                    }
                                }
                            </td>
                            <td class="three">
                                @{
                                string reuName = string.Empty;
                                if (item.ReviewUserName == "" || item.ReviewUserName == null || item.ReviewUserName == "null")
                                {
                                    reuName = "无";
                                }
