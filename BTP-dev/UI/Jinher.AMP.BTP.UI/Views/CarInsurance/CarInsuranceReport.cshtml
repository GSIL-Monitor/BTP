    }


    function FormatterStrongInsurance(callvalue, opts, rowdata) {
        if (callvalue != null && rowdata[57] != null)
            return callvalue + '至' + rowdata[57];
        else
            return "";
    }

    function FormatterBusiness(callvalue, opts, rowdata) {
        if (callvalue != null && rowdata[56] != null)
            return callvalue + '至' + rowdata[56];
        else
            return "";
    }

    function FormatterIsTransfer(callvalue, opts, rowdata) {
        if (callvalue == "01") {
            return "是";
        }
        else {
            return "否";
        }
    }

    function FormatterIdType(callvalue, opts, rowdata) {
        var TypeName = '';
        switch (callvalue) {
            case "01":
                TypeName = '身份证';
                break;
            case "02":
                TypeName = '户口簿';
                break;
            case "03":
                TypeName = '驾驶证';
                break;
            case "04":
                TypeName = '护照';
                break;
            case "05":
                TypeName = '军官证';
                break;
            case "06":
                TypeName = '社保证';
                break;
            case "07":
                TypeName = '组织机构代码';
                break;
            case "08":
                TypeName = '税务登记证';
                break;
            case "09":
                TypeName = '企业代码';
                break;
            case "10":
                TypeName = '法人证书';
                break;
            case "11":
                TypeName = '营业执照';
                break;
            case "12":
                TypeName = '军官退休证';
                break;
            case "13":
                TypeName = '台胞证';
                break;
            case "14":
                TypeName = '港澳居民来往内地通行证';
                break;
            case "15":
                TypeName = '外国人永久居住身份证';
                break;
        }
        return TypeName;
    }

    function FormatterState(callvalue, opts, rowdata) {
        var stateName = '';
        switch (callvalue) {
            case "1":
                stateName = '已提交';
                break;
            case "2":
                stateName = '核保中';
                break;
            case "3":
                stateName = '待支付';
                break;
            case "4":
                stateName = '已支付';
                break;
            case "5":
                stateName = '已完成';
                break;
            case "6":
                stateName = '核保失败';
                break;
            case "7":
                stateName = '支付失败';
                break;
            case "8":
                stateName = '落地失败';
                break;
            case "9":
                stateName = '落地中（关联单）';
                break;
            case "10":
                stateName = '已撤单';
                break;
            case "11":
                stateName = '投保失败';
                break;
        }
        return stateName;
    }

    function FormatterRebateState(callvalue, opts, rowdata) {
        if (callvalue == 'NOPAY') {
            return "未支付";
        }
        if (callvalue == 'NOAUDIT') {
            return "待审核";
        }
        if (callvalue == 'REBATESUCCESS') {
            return "返利成功";
        }
        if (callvalue == 'REBATEFAIL') {
            return "返利失败";
        }
    }



    var defaultVue = new Vue({
        el: '#app',

        data: {
            name: '',
            begintime: '',
            endtime: '',
            options: [
                {
                    value: '-1',
                    label: '全部'
                },
                {
                    value: '1',
                    label: '已提交'
                },
                {
                    value: '2',
                    label: '核保中'
                },
                {
                    value: '3',
                    label: '待支付'
                },
                {
                    value: '4',
                    label: '已支付'
                },
                {
                    value: '5',
                    label: '已完成'
                },
                {
                    value: '6',
                    label: '核保失败'
                },
                {
                    value: '7',
                    label: '支付失败'
                },
                {
                    value: '8',
                    label: '落地失败'
                },
                {
                    value: '9',
                    label: '落地中'
                },
                {
                    value: '10',
                    label: '已撤单'
                },
                {
                    value: '11',
                    label: '投保失败'
                }
            ],
            status: ''
        },

        methods: {
            // 拉取表格数据
            fetchData: function () {
                $("#jqgrid").jqGrid('setGridParam', {
                    url: "/CarInsurance/GetCarInsuranceReport",
                    datatype: 'json',
                    postData: { //传递查询参数到后台 
                        'name': this.name,
                        'begintime': this.begintime == '' ? null : this.begintime,
                        'endtime': this.endtime == '' ? null : this.endtime,
                        'status': this.status
                    },
                    page: 1
                }).trigger("reloadGrid"); //重新载入 
            },

            ExportExcel: function () {
                var Dtodata = $("#jqgrid").jqGrid("getRowData");
                var DTOstr = JSON.stringify(Dtodata);
                $("#JQgridTable").val(DTOstr);
                $("#FormExcel").submit();

            }

        },

        // Vue加载完毕
        mounted: function () {
            this.fetchData();
            newSetIframeHeight();
        },

        // Vue触发更新
        updated: function () {
        }
    });
    try {
        var rootPath = "/";
        var arr = window.location.host.split('.');
        if (arr.length > 0) {
            document.domain = arr[arr.length - 2] + "." + arr[arr.length - 1];
        }
    } catch (err) { }
    //重新设置iframe高度.
    function newSetIframeHeight() {
        var body = document.body;
        var body_height = body.clientHeight + 1500;
        var oriHeight = window.parent.document.body.clientHeight - window.parent.document.getElementById("header").clientHeight - window.parent.document.getElementsByClassName("footer")[0].clientHeight;
        var setHeight = body_height > oriHeight ? body_height : oriHeight - 5;
        window.parent.document.getElementById("mainframe").style.height = setHeight + "px";
        body.style.height = setHeight + "px";
    }

</script>
